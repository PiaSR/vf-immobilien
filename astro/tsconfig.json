{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "paths": {
      "@sanity/client": [
        "./node_modules/@sanity/client"
      ]
    },
    "jsxImportSource": "react"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/env.d.ts" 
  ],
  "exclude": [
    "dist"
  ]
}