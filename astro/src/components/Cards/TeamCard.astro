---
interface Props {
  imageSrc: string;
  imageAlt: string;
  name: string;
  role: string;
  description: string;
}

const { imageSrc, imageAlt, name, role, description } = Astro.props;
---

<div class="team-card">
  <img src={imageSrc} alt={imageAlt} class="team-card-image" />
  <div class="team-card-content">
    <h3 class="team-member-name">{name}</h3>
    <p class="team-member-role">{role}</p>
    <div class="card-line-horizontal"></div>
    <p class="team-member-description">{description}</p>
  </div>
</div>

<style>
  .team-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    background-color: var(--color-brand-green);
    color: var(--color-neutral-white);
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .team-card-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .team-card-content {
    display: flex;
    flex-direction: column;

    align-items: flex-start;
    text-align: start;
    padding: var(--spacing-md);
    gap: var(--spacing-sm);
  }

  .team-member-name {
    font-size: var(--font-size-h5);
    font-weight: var(--font-weight-bold);
    font-family: var(--font-primary);
  }

  .team-member-role {
    font-size: var(--font-size-body-small);
    font-style: italic;
  }

  .card-line-horizontal {
    width: 50px;
    height: 3px;
    background-color: var(--color-neutral-white);
    margin: 0.5rem 0;
  }

  .team-member-description {
    font-size: var(--font-size-body-small);
    line-height: var(--line-height-body);
  }
</style>
