---
// Landing page hero

const title = "VF Immobilien";
const subtitle = "wo Erfahrung auf Innovation trifft";
const ctaText = "Fragen? Wir haben Antworten";
---

<section class="hero">
  <h1>{title} - <span class="subtitle">{subtitle}</span></h1>
  <button class="cta-button-green">{ctaText}</button>

  <style>
    .hero {
      text-align: center;
      padding: 4rem 1rem;
      background: #000;
      color: white;
    }
    .subtitle {
      color: #2c3e50;
      font-weight: 300;
    }
  </style>
</section>
