<script>
  // --- HARDCODED DATA from provided component snippet ---
  const viennaDistricts = [
    "1. Innere Stadt",
    "2. Leopoldstadt",
    "3. Landstraße",
    "4. Wieden",
    "5. Margareten",
    "6. Mariahilf",
    "7. Neubau",
    "8. Josefstadt",
    "9. Alsergrund",
    "10. Favoriten",
    "11. Simmering",
    "12. Meidling",
    "13. Hietzing",
    "14. Penzing",
    "15. Rudolfsheim-Fünfhaus",
    "16. Ottakring",
    "17. Hernals",
    "18. Währing",
    "19. Döbling",
    "20. Brigittenau",
    "21. Floridsdorf",
    "22. Donaustadt",
    "23. Liesing",
  ];
  // Mocked up surrounding districts and amenities based on user code
  const surroundingDistricts = [
    "Baden (Umgebung)",
    "Mödling (Umgebung)",
    "Korneuburg (Umgebung)",
    "Gänserndorf (Umgebung)",
    "Tulln (Umgebung)",
  ];
  const objektarten = [
    "Wohnung",
    "Haus",
    "Grundstueck",
    "Parkplatz",
    "Gewerbeimmobilie",
  ];
  const amenities = [
    "Balkon",
    "Garten",
    "Klimaanlage",
    "Lift",
    "Keller",
    "Garage",
    "Sauna",
    "Dachboden",
  ];

  const districts = {
    Wien: viennaDistricts,
    Niederösterreich: surroundingDistricts,
  };

  const STEPS = [
    "panel-immobilie",
    "panel-ort",
    "panel-groesse",
    "panel-preis",
    "panel-ausstattung",
    "panel-abo",
  ];
  const TAB_IDS = [
    "step-tab-immobilie",
    "step-tab-ort",
    "step-tab-groesse",
    "step-tab-preis",
    "step-tab-ausstattung",
    "step-tab-abo",
  ];
  let currentStepIndex = 0; // 0-indexed

  // Element References
  const formElement = document.getElementById("property-filter-form-element");
  const backButton = document.getElementById("back-button");
  const nextButton = document.getElementById("next-button");
  const submitButton = document.getElementById("submit-button");
  const errorMessage = document.getElementById("error-message");
  const priceGroupKauf = document.querySelector(".price-group-kauf");
  const priceGroupMiete = document.querySelector(".price-group-miete");
  const submittedCriteria = document.getElementById("submitted-criteria");

  // --- Utility Functions ---

  const capitalize = (s) =>
    s.charAt(0).toUpperCase() + s.slice(1).replace(/-/g, " ");

  const getInputValue = (name) => {
    const input = formElement.querySelector(`[name="${name}"]`);
    return input?.value ? input.value : null;
  };

  const formatPrice = (price) => {
    if (price === null || isNaN(Number(price))) return "";
    return new Intl.NumberFormat("de-DE", {
      maximumFractionDigits: 0,
    }).format(Number(price));
  };

  function displayError(message) {
    errorMessage.textContent = message;
    errorMessage.classList.remove("hidden");
    setTimeout(() => {
      errorMessage.classList.add("hidden");
    }, 3500);
  }

  function validateStep(stepId) {
    const currentPanel = document.getElementById(stepId);
    if (!currentPanel) return true;

    const inputs = currentPanel.querySelectorAll("[required]");

    // Check for required inputs in the final 'Abo' step
    if (stepId === "panel-abo") {
      for (const input of inputs) {
        if (!input.value.trim()) {
          displayError("Bitte E-Mail und Name eingeben.");
          return false;
        }
      }
      if (!getInputValue("abo-email").includes("@")) {
        displayError("Bitte eine gültige E-Mail-Adresse eingeben.");
        return false;
      }
    }

    // Other steps (filters) are optional criteria, so we only validate required inputs if they exist.
    return true;
  }

  // --- Content Injection Functions (Mimicking Astro/JSX mapping) ---
  function renderObjektarten() {
    const container = document.getElementById("objektart-options");
    if (!container) return;
    container.innerHTML = objektarten
      .map(
        (type) => `
                <label class="checkbox-label">
                    <input type="checkbox" name="objektart" value="${type}" class="checkbox-input" />
                    <span class="checkbox-text">${type}</span>
                </label>
            `
      )
      .join("");
  }

  function renderDistricts() {
    const container = document.getElementById("ort-options-wrapper");
    if (!container) return;

    let html = "";
    Object.keys(districts).forEach((region) => {
      const list = districts[region];
      const half = Math.ceil(list.length / 2);

      const column1 = list
        .slice(0, half)
        .map(
          (district) => `
                    <label class="checkbox-label">
                        <input type="checkbox" name="lage" value="${district}" class="checkbox-input" />
                        <span class="checkbox-text">${district}</span>
                    </label>
                `
        )
        .join("");

      const column2 = list
        .slice(half)
        .map(
          (district) => `
                    <label class="checkbox-label">
                        <input type="checkbox" name="lage" value="${district}" class="checkbox-input" />
                        <span class="checkbox-text">${district}</span>
                    </label>
                `
        )
        .join("");

      html += `
                    <div class="filter-form-group">
                        <h2 class="filter-form-heading heading-style-h6">${region}</h2>
                        <div class="filter-form-input-wrapper checkbox-columns">
                            <div class="checkbox-column">${column1}</div>
                            <div class="checkbox-column">${column2}</div>
                        </div>
                    </div>
                `;
    });
    container.innerHTML = html;
  }

  function renderAmenities() {
    const container = document.getElementById("ausstattung-options");
    if (!container) return;

    let html = "";
    const half = Math.ceil(amenities.length / 2);

    const column1 = amenities
      .slice(0, half)
      .map(
        (amenity) => `
                <label class="checkbox-label">
                    <input type="checkbox" name="ausstattung" value="${amenity}" class="checkbox-input" />
                    <span class="checkbox-text">${capitalize(amenity)}</span>
                </label>
            `
      )
      .join("");

    const column2 = amenities
      .slice(half)
      .map(
        (amenity) => `
                <label class="checkbox-label">
                    <input type="checkbox" name="ausstattung" value="${amenity}" class="checkbox-input" />
                    <span class="checkbox-text">${capitalize(amenity)}</span>
                </label>
            `
      )
      .join("");

    html = `
                <div class="checkbox-column">${column1}</div>
                <div class="checkbox-column">${column2}</div>
            `;
    container.innerHTML = html;
  }

  // --- CORE LOGIC: UPDATE TAB SELECTION TEXTS ---
  const updateTabSelections = () => {
    const formData = new FormData(formElement);

    // 1. IMMOBILIE (vermarktungsart, objektart)
    const vmArt = formData.get("vermarktungsart");
    const objArts = formData.getAll("objektart").filter((v) => v.length > 0);
    const selectionImmobilie = document.getElementById("selection-immobilie");

    let immobilietext = "Alle Kategorien";
    const vmAction = vmArt === "miete" ? "mieten" : "kaufen";
    const vmType = vmArt === "miete" ? "Miete" : "Kauf";

    if (vmArt && objArts.length === 0) {
      immobilietext = vmType;
    } else if (vmArt && objArts.length === 1) {
      immobilietext = `${objArts[0]} ${vmAction}`;
    } else if (vmArt && objArts.length > 1) {
      immobilietext = `${objArts.length} Objektarten ${vmAction}`;
    } else if (!vmArt && objArts.length > 0) {
      immobilietext = `${objArts.length} Objektarten`;
    }
    selectionImmobilie.textContent = immobilietext;

    // 2. ORT (lage)
    const selectedLages = formData.getAll("lage").filter((v) => v.length > 0);
    const selectionOrt = document.getElementById("selection-ort");
    let ortText = "Alle Orte";

    if (selectedLages.length === 1) {
      ortText = selectedLages[0].split("(")[0].trim();
    } else if (selectedLages.length > 1) {
      ortText = `${selectedLages.length} Orte`;
    }
    selectionOrt.textContent = ortText;

    // 3. GRÖSSE (zimmer, flaeche)
    let zimmerMin = getInputValue("zimmer-min");
    let zimmerMax = getInputValue("zimmer-max");
    let flaecheMin = getInputValue("flaeche-min");
    let flaecheMax = getInputValue("flaeche-max");
    const selectionGroesse = document.getElementById("selection-groesse");

    let groesseText = "Jede Größe";
    let parts = [];

    if (zimmerMin || zimmerMax) {
      let zText = "";
      if (zimmerMin && zimmerMax) zText = `${zimmerMin} - ${zimmerMax} Z.`;
      else if (zimmerMin) zText = `ab ${zimmerMin} Z.`;
      else if (zimmerMax) zText = `bis ${zimmerMax} Z.`;
      parts.push(zText);
    }

    if (flaecheMin || flaecheMax) {
      let fText = "";
      if (flaecheMin && flaecheMax) fText = `${flaecheMin} - ${flaecheMax} m²`;
      else if (flaecheMin) fText = `ab ${flaecheMin} m²`;
      else if (flaecheMax) fText = `bis ${flaecheMax} m²`;
      parts.push(fText);
    }

    if (parts.length > 0) {
      groesseText = parts.join(", ");
    }
    selectionGroesse.textContent = groesseText;

    // 4. PREIS (price-kauf/miete)
    let kaufMin = getInputValue("preis-kauf-min");
    let kaufMax = getInputValue("preis-kauf-max");
    let mieteMin = getInputValue("preis-miete-min");
    let mieteMax = getInputValue("preis-miete-max");
    const selectionPreis = document.getElementById("selection-preis");

    let preisText = "Jeder Preis";
    let hasKauf = kaufMin || kaufMax;
    let hasMiete = mieteMin || mieteMax;

    if (vmArt === "kauf" && hasKauf) {
      let range = "";
      if (kaufMin && kaufMax)
        range = `${formatPrice(kaufMin)} - ${formatPrice(kaufMax)} €`;
      else if (kaufMin) range = `ab ${formatPrice(kaufMin)} €`;
      else if (kaufMax) range = `bis ${formatPrice(kaufMax)} €`;
      preisText = range;
    } else if (vmArt === "miete" && hasMiete) {
      let range = "";
      if (mieteMin && mieteMax)
        range = `${formatPrice(mieteMin)} - ${formatPrice(mieteMax)} €`;
      else if (mieteMin) range = `ab ${formatPrice(mieteMin)} €`;
      else if (mieteMax) range = `bis ${formatPrice(mieteMax)} €`;
      preisText = range;
    } else if (hasKauf || hasMiete) {
      preisText =
        hasKauf && hasMiete
          ? "Kauf & Miete"
          : hasKauf
            ? "Kauf definiert"
            : "Miete definiert";
    }

    selectionPreis.textContent = preisText;

    // 5. AUSSTATTUNG (ausstattung)
    const selectedAmenities = formData
      .getAll("ausstattung")
      .filter((v) => v.length > 0);
    const selectionAusstattung = document.getElementById(
      "selection-ausstattung"
    );
    let ausstattungText = "Details";

    if (selectedAmenities.length === 1) {
      ausstattungText = capitalize(selectedAmenities[0]);
    } else if (selectedAmenities.length > 1) {
      ausstattungText = `${selectedAmenities.length} Details`;
    }
    selectionAusstattung.textContent = ausstattungText;

    // 6. ABO (email)
    const email = getInputValue("abo-email");
    const selectionAbo = document.getElementById("selection-abo");
    selectionAbo.textContent =
      email && email.includes("@") ? email : "Ihre Daten";
  };

  // --- Price Group Visibility Logic ---
  function handleVermarktungsartChange() {
    const vmArt = getInputValue("vermarktungsart");

    priceGroupKauf.classList.add("hidden");
    priceGroupMiete.classList.add("hidden");

    if (vmArt === "miete") {
      priceGroupMiete.classList.remove("hidden");
    } else if (vmArt === "kauf") {
      priceGroupKauf.classList.remove("hidden");
    } else {
      // Show both if nothing is selected (default, or if 'Immobilie' panel is skipped)
      priceGroupKauf.classList.remove("hidden");
      priceGroupMiete.classList.remove("hidden");
    }
  }

  // --- Multi-Step Navigation Logic ---

  function updateUI(direction = "next") {
    // 1. Update Panel Visibility
    STEPS.forEach((panelId, index) => {
      const panel = document.getElementById(panelId);
      panel.classList.remove(
        "active-panel",
        "hidden-panel-next",
        "hidden-panel-prev"
      );

      if (index === currentStepIndex) {
        panel.classList.add("active-panel");
      } else {
        // Control transition direction based on history
        if (index < currentStepIndex && direction === "prev") {
          panel.classList.add("hidden-panel-prev");
        } else if (index > currentStepIndex || direction === "next") {
          panel.classList.add("hidden-panel-next");
        }
      }
    });

    // Handle success panel display
    const successPanel = document.getElementById("panel-success");
    if (currentStepIndex >= STEPS.length) {
      successPanel.classList.add("active-panel");
      navigationWrapper.classList.add("hidden");
    } else {
      successPanel.classList.remove("active-panel");
      navigationWrapper.classList.remove("hidden");
    }

    // 2. Update Progress Tabs
    TAB_IDS.forEach((tabId, index) => {
      const tab = document.getElementById(tabId);
      tab.classList.remove("active");
      if (index <= currentStepIndex) {
        tab.classList.add("active");
      }
    });

    // 3. Update Navigation Buttons
    backButton.disabled = currentStepIndex === 0;

    if (currentStepIndex === STEPS.length - 1) {
      nextButton.classList.add("hidden");
      submitButton.classList.remove("hidden");
    } else {
      nextButton.classList.remove("hidden");
      submitButton.classList.add("hidden");
    }
  }

  function nextStep() {
    if (validateStep(STEPS[currentStepIndex])) {
      if (currentStepIndex < STEPS.length - 1) {
        currentStepIndex++;
        updateUI("next");
      } else if (currentStepIndex === STEPS.length - 1) {
        submitForm();
      }
    }
  }

  function prevStep() {
    if (currentStepIndex > 0) {
      currentStepIndex--;
      updateUI("prev");
    }
  }

  function submitForm() {
    // Final validation is done in nextStep before calling this

    // 1. Collect all non-empty form data (filters and subscription details)
    const formData = new FormData(formElement);
    const data = {};
    const criteria = {};

    // Define which fields are filters and which are subscription details
    const filterFields = [
      "vermarktungsart",
      "objektart",
      "lage",
      "zimmer-min",
      "zimmer-max",
      "flaeche-min",
      "flaeche-max",
      "preis-kauf-min",
      "preis-kauf-max",
      "preis-miete-min",
      "preis-miete-max",
      "ausstattung",
    ];

    // Build the criteria object
    formData.forEach((value, key) => {
      const trimmedValue = typeof value === "string" ? value.trim() : value;
      if (trimmedValue) {
        if (filterFields.includes(key)) {
          // Handle multiple values for checkboxes
          if (criteria[key] && Array.isArray(criteria[key])) {
            criteria[key].push(trimmedValue);
          } else if (criteria[key]) {
            criteria[key] = [criteria[key], trimmedValue];
          } else {
            criteria[key] = trimmedValue;
          }
        } else if (key.startsWith("abo-")) {
          data[key] = trimmedValue;
        }
      }
    });

    // Add criteria to the final data object
    data.criteria = criteria;

    // 2. Display collected criteria in the success panel
    submittedCriteria.textContent =
      "Abo-Details:\n" + JSON.stringify(data, null, 2);

    // 3. Move to the final (success) step
    currentStepIndex++;
    updateUI();
  }

  // --- Event Listeners and Initialization ---

  document.addEventListener("DOMContentLoaded", () => {
    // Inject dynamic options
    renderObjektarten();
    renderDistricts();
    renderAmenities();

    // Set up listeners
    nextButton.addEventListener("click", nextStep);
    backButton.addEventListener("click", prevStep);
    submitButton.addEventListener("click", submitForm);

    // Listen to any input change for real-time progress bar update
    formElement.addEventListener("input", () => {
      updateTabSelections();
      // Specifically check for Vermarktungsart change to toggle price fields
      handleVermarktungsartChange();
    });

    // Initial UI setup
    updateUI();
    updateTabSelections();
    handleVermarktungsartChange(); // Set initial price group visibility
  });
</script>
