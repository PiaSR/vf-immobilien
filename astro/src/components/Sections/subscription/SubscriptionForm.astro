<section class="section-properties-filter-form">
  <div class="properties-filter-wrapper">
    <h1
      style="font-size: 2rem; font-weight: 700; text-align: center; padding-top: 20px;"
    >
      Property Alert Subscription
    </h1>
    <p
      style="text-align: center; color: var(--text-faded); padding-bottom: 20px;"
    >
      Define your ideal search criteria in the steps below.
    </p>
    <div id="property-filter-form" class="form-block">
      <!-- Progress Indicator (Replicating filter-heading-bar) -->
      <div id="filter-heading-bar" class="filter-heading-bar">
        <div
          data-tab="immobilie"
          id="step-tab-immobilie"
          class="filter-heading-tab tab-container active"
        >
          <div class="filter-heading-tab-name">1. Immobilie</div>
          <div id="selection-immobilie" class="filter-heading-tab-selection">
            Alle Kategorien
          </div>
        </div>

        <div
          data-tab="ort"
          id="step-tab-ort"
          class="filter-heading-tab tab-container"
        >
          <div class="filter-heading-tab-name">2. Ort</div>
          <div id="selection-ort" class="filter-heading-tab-selection">
            Alle Orte
          </div>
        </div>

        <div
          data-tab="groesse"
          id="step-tab-groesse"
          class="filter-heading-tab tab-container"
        >
          <div class="filter-heading-tab-name">3. Größe</div>
          <div id="selection-groesse" class="filter-heading-tab-selection">
            Jede Größe
          </div>
        </div>

        <div
          data-tab="preis"
          id="step-tab-preis"
          class="filter-heading-tab tab-container"
        >
          <div class="filter-heading-tab-name">4. Preis</div>
          <div id="selection-preis" class="filter-heading-tab-selection">
            Jeder Preis
          </div>
        </div>

        <div
          data-tab="ausstattung"
          id="step-tab-ausstattung"
          class="filter-heading-tab tab-container"
        >
          <div class="filter-heading-tab-name">5. Ausstattung</div>
          <div id="selection-ausstattung" class="filter-heading-tab-selection">
            Details
          </div>
        </div>

        <div
          data-tab="abo"
          id="step-tab-abo"
          class="filter-heading-tab tab-container"
        >
          <div class="filter-heading-tab-name">6. Abo</div>
          <div id="selection-abo" class="filter-heading-tab-selection">
            Ihre Daten
          </div>
        </div>
      </div>

      <!-- Panel Wrapper -->
      <div id="filter-panel-wrapper" class="filter-panel-wrapper">
        <form
          id="property-filter-form-element"
          name="property-filter-form"
          class="form"
        >
