            <div class="filter-form-group price-group price-group-kauf">
              <h2 class="filter-form-heading heading-style-h6">
                Kaufpreis (€)
              </h2>
              <div class="number-input-wrapper">
                <input
                  class="text-field"
                  name="preis-kauf-min"
                  placeholder="Min"
                  type="number"
                  id="filter-preis-kauf-min"
                />
                <div class="input-separator">bis</div>
                <input
                  class="text-field"
                  name="preis-kauf-max"
                  placeholder="Max"
                  type="number"
                  id="filter-preis-kauf-max"
                />
              </div>
            </div>

            <div class="filter-form-group price-group price-group-miete hidden">
              <h2 class="filter-form-heading heading-style-h6">Miete (€)</h2>
              <div class="number-input-wrapper">
                <input
                  class="text-field"
                  name="preis-miete-min"
                  placeholder="Min"
                  type="number"
                  id="filter-preis-miete-min"
                />
                <div class="input-separator">bis</div>
                <input
                  class="text-field"
                  name="preis-miete-max"
                  placeholder="Max"
                  type="number"
                  id="filter-preis-miete-max"
                />
              </div>
            </div>
          </div>

          <!-- Panel 5: Ausstattung -->
          <div id="panel-ausstattung" class="filter-panel">
            <div class="filter-form-group">
              <h2 class="filter-form-heading heading-style-h6">Details</h2>
              <div
                id="ausstattung-options"
                class="filter-form-input-wrapper checkbox-columns"
              >
                <!-- Dynamic content will be injected here -->
              </div>
            </div>
          </div>

          <!-- Panel 6: Final Subscription Details -->
          <div id="panel-abo" class="filter-panel">
            <div class="filter-form-group">
              <h2 class="filter-form-heading heading-style-h6">
                Ihre Kontaktdaten
              </h2>
              <label style="display: block; margin-bottom: 5px;">Email</label>
              <input
                class="text-field"
                name="abo-email"
                placeholder="ihre@email.at"
                type="email"
                required
              />
            </div>
            <div class="filter-form-group">
              <label style="display: block; margin-bottom: 5px;">Name</label>
              <input
                class="text-field"
                name="abo-name"
                placeholder="Ihr Name"
                type="text"
                required
              />
            </div>
            <p
              style="font-size: 0.9rem; color: var(--text-faded); margin-top: 20px;"
            >
              By clicking "Subscribe", you agree to receive property alerts
              based on the selected criteria.
            </p>
          </div>

          <!-- Final Success/Error Placeholder -->
          <div id="panel-success" class="filter-panel">
            <div style="text-align: center; padding: 40px 0;">
              <h2
                style="color: var(--accent-color); font-size: 1.8rem; margin-bottom: 15px;"
              >
                Abonnement erfolgreich!
              </h2>
              <p style="color: var(--text-light); font-size: 1.1rem;">
                Ihre Suchkriterien wurden gespeichert. Sie erhalten nun passende
                Immobilienangebote.
              </p>
              <pre
                id="submitted-criteria"
                style="background-color: var(--background-dark); padding: 15px; border-radius: 6px; margin-top: 30px; font-size: 0.85rem; overflow-x: auto; text-align: left;">
              </pre>
            </div>
          </div>
        </form>
      </div>

      <!-- Navigation Bar -->
      <div class="navigation-wrapper">
        <button
          id="back-button"
          class="custom-submit-button back-button"
          disabled>← Zurück</button
        >

        <div
          id="error-message"
          class="message-box hidden"
          style="color: #ef4444;"
        >
          Bitte füllen Sie alle erforderlichen Felder aus.
        </div>

        <button id="next-button" class="custom-submit-button next-button"
          >Weiter →</button
        >
        <button
          id="submit-button"
          class="custom-submit-button next-button hidden">Abonnieren!</button
        >
      </div>
    </div>
  </div>
</section>
