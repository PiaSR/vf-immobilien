---
// Landing page hero
import Button from "../../Base/Button.astro";
import { Image } from "astro:assets";
import heroImage from "/src/assets/images/faq-hero.jpg";
import HeroHeader from "../../Base/HeroHeader.astro";
---

<section id="faq-hero" class="faq-hero has-angled-image">
  <div class="site-container hero-grid-content padding-section">
    <div class="container-align-left">
      <HeroHeader
        header="Alles, was Sie brauchen."
        text="Wissenswertes & Dokumente"
        headerColor="var(--color-neutral-white)"
        textColor="var(--color-neutral-white)"
      />
    </div>
    <Image
      src={heroImage}
      alt="brown wooden door"
      class="angled-image angled-image-mobile-show"
      loading="eager"
      widths={[450, 600, 992, 1200, 1667]}
      sizes="(max-width: 991px) 100vw, 28vw"
      width={1667}
      height={2500}
      quality={70}
    />
  </div>
</section>

<style>
  .faq-hero {
    position: relative;
    background: var(--color-brand-medium-green);
  }
  .padding-section {
    padding-right: 0;
  }

  .site-container {
    padding-top: 0;
    padding-bottom: 0;
  }
  .hero-grid-content {
    display: grid;
    grid-template-columns: 1fr 28%;
    gap: var(--spacing-2xl);
    height: 100%;
  }
  .angled-image-mobile-show {
    /* Set default display here to be consistent with angled-image behavior */
    display: block;
  }

  @media (max-width: 61.875rem) {
    h1 {
      font-size: var(--font-size-h2);
    }
    .hero-grid-content {
      grid-template-columns: 1fr;
    }
  }
</style>
