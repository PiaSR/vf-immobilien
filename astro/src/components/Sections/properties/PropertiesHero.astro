---
import { Image } from "astro:assets";
import propertiesHero from "/src/assets/images/properties-hero.jpg";
import HeroHeader from "../../Base/HeroHeader.astro";
---

<section id="properties-hero" class="properties-hero">
  <div class="site-container hero-grid-content padding-section">
    <div class="container-align-left">
      <HeroHeader
        header="Immobiliensuche"
        headerColor="var(--color-brand-dark-green)"
      />
    </div>
    <Image src={propertiesHero} alt="brown wooden door" class="angled-image" />
    <Image
      src={propertiesHero}
      alt="brown wooden door"
      class="angled-image-mobile"
    />
  </div>
</section>

<style>
  .properties-hero {
    background-color: var(--color-brand-light-green);
    position: relative;
    height: 23vh;
  }

  .padding-section {
    padding-right: 0;
  }

  .site-container {
    padding-top: 0;
    padding-bottom: 0;
  }

  .hero-grid-content {
    display: grid;
    grid-template-columns: 1fr 28%;
    gap: var(--spacing-2xl);
    height: 100%;
  }
  .angled-image-mobile {
    display: none !important;
  }

  @media (max-width: 991px) {
    .container-align-left {
      margin-top: var(--spacing-2xl);
    }
  }
</style>
