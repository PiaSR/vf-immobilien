---
import ButtonArrow from "../../Base/ButtonArrow.astro";
import HeroHeader from "../../Base/HeroHeader.astro";
---

<section id="about-hero" class="about-hero">
  <div class="site-container hero-grid-content padding-section">
    <div class="container-align-left">
      <HeroHeader
        header="Tradition trifft Zukunft"
        text="Immobilienverwaltung & Vermittlung mit persÃ¶nlichem Engagement und fachlicher Kompetenz."
        headerColor="var(--color-neutral-white)"
        textColor="var(--color-neutral-white)"
      />
      <ButtonArrow class="button-light-green">Mehr zu Leistungen</ButtonArrow>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background:
      linear-gradient(rgba(47, 60, 53, 0.4), rgba(47, 60, 53, 0.4)),
      /* The overlay */ url("../../../assets/images/aboutHeroImgCut.png")
        no-repeat center / cover;
    padding-bottom: calc(var(--spacing-4xl) + 15vw);
  }

  .hero::after {
    content: "";
    position: absolute;
    bottom: -40rem;
    left: 0;
    width: 100%;
    height: 40rem; /* Adjust this to control the height of the diagonal */
    background-color: var(
      --color-neutral-lightest
    ); /* Color of the section BELOW it */
    transform: skewY(11deg); /* Adjust this value for the angle */
    transform-origin: bottom right;
    z-index: 1; /* Ensures the bottom wedge is on top */
  }
  .container-align-left {
    padding-bottom: 0;
  }
</style>
