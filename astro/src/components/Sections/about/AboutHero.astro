import aboutHeroImgCut from "../../../assets/images/aboutHeroImgCut.jpg";
---

<section id="about-hero" class="about-hero">
  <div
    class="site-container about-container-align-left hero-grid-content padding-section"
  >
    <div class="container-align-left">
      <HeroHeader
        header="Tradition trifft Zukunft"
