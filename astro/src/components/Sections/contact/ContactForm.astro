---
import ButtonArrow from "../../Base/ButtonArrow.astro";
---

<section id="contact-form-section" class="contact-section">
  <div class="site-container padding-section">
    <div class="contact-card-wrapper">
      <div class="section-header-wrapper">
        <h2 class="heading-h2">Kontaktieren Sie uns</h2>

        <p class="text-description">
          Für Anfragen, Informationen oder Terminvereinbarungen – wir stehen
          Ihnen gerne zur Verfügung.
        </p>
      </div>

      <div class="contact-form-container">
        <form
          id="contact-form"
          name="contact-form"
          data-name="contact form"
          method="POST"
          action="/api/contactFormResend"
          novalidate
        >
          <div class="form-grid-2-col">
            <div class="form-field-group">
              <label for="first-name">Vorname</label>
              <input
                class="form-input"
                maxlength="256"
                name="first-name"
                placeholder=""
                type="text"
                id="first-name"
                required
              />
              <!-- FIX: Korrekte ID für Vorname -->
              <span id="error-first-name" class="input-error-message"></span>
            </div>
            <div class="form-field-group">
              <label for="last-name">Nachname</label>
              <input
                class="form-input"
                maxlength="256"
                name="last-name"
                placeholder=""
                type="text"
                id="last-name"
                required
              />
              <!-- FIX: Korrekte ID für Nachname -->
              <span id="error-last-name" class="input-error-message"></span>
            </div>
          </div>

          <div class="padding-bottom padding-small"></div>

          <div class="form-field-group">
            <label for="email">Email</label>
            <input
              class="form-input"
              maxlength="256"
              name="email"
              placeholder=""
              type="email"
              id="email"
              required
            />
            <!-- FIX: Korrekte ID für Email -->
            <span id="error-email" class="input-error-message"></span>
          </div>
          <div class="form-field-group">
            <label for="phone">Telefonnummer</label>
            <input
              class="form-input"
              maxlength="256"
              name="phone"
              placeholder=""
              type="tel"
              id="phone"
              required
            />
            <!-- ID ist hier korrekt (error-phone) -->
            <span id="error-phone" class="input-error-message"></span>
          </div>

          <div class="padding-bottom padding-small"></div>

          <div class="form-field-group">
            <label for="message">Ihre Nachricht</label>
            <textarea
              id="message"
              name="message"
              maxlength="5000"
              placeholder=""
              class="form-textarea"
              required></textarea>
            <!-- FIX: Korrekte ID für Nachricht -->
            <span id="error-message" class="input-error-message"></span>
          </div>

          <div class="padding-bottom padding-medium"></div>

          <label class="form-checkbox-label">
            <input
              type="checkbox"
              name="TandCs"
              id="TandCs"
              data-name="TandCs"
              required
            />
            <span class="checkbox-custom-indicator"></span>
            <span class="checkbox-text" for="TandCs"
              >Ich habe die AGB und <a href="src/pages/datenschutz"
                >Datenschutzbestimmungen</a
              > gelesen und erkläre mich damit einverstanden.</span
            >
          </label>
          <div class="checkbox-error-wrapper">
            <span id="error-TandCs" class="input-error-message"></span>
          </div>

          <div class="padding-bottom padding-small"></div>

          <ButtonArrow type="submit" class="button-orange">
            Anfrage absenden
          </ButtonArrow>
        </form>

        <!-- Form Feedback Messages -->
        <div id="form-success" class="form-success-message">
          <div>
            Danke für Ihre Anfrage! Unser Team wird sich bald bei Ihnen melden.
          </div>
        </div>
        <div id="form-error" class="form-error-message">
          <div>
            Beim Absenden des Formulars ist ein Fehler aufgetreten. Bitte
            versuchen Sie es erneut.
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* --- Style Block (Unchanged, for context) --- */
  :root {
    /* Define CSS Variables for better organization (Mockup values) */
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-3xl: 3rem;
    --spacing-4xl: 4rem;
    --color-neutral-lightest: #f4f7f6;
    --color-neutral-dark: #4a4a4a;
    --color-neutral-medium-grey: #ccc;
    --color-neutral-font-dark: #1a1a1a;
    --color-brand-medium-green: #38a169;
    --color-system-error: #f87171; /* Example red */
    --color-system-success: #60a5fa; /* Example blue */
    --color-system-error-font: #ffffff;
    --color-system-success-font: #ffffff;
    --border-radius: 0.5rem;
    --font-size-body-base: 1rem;
    --font-size-body-small: 0.875rem;
    --font-size-body: 1rem;
    --font-weight-bold: 700;
  }

  /* NEU: Styling für Fehlermeldungen */
  .input-error-message {
    font-size: 0.8rem;
    color: var(--color-system-error);
    margin-top: 0.25rem;
    display: none; /* Wichtig: Standardmäßig ausblenden */
    font-weight: 500;
  }

  /* NEU: Styling für fehlerhafte Eingaben */
  .form-input.error,
  .form-textarea.error {
    border-color: var(--color-system-error);
  }

  /* --- Existing Styles --- */
  .contact-section {
    position: relative;
    padding: var(--spacing-4xl) 0;
    background-color: var(--color-neutral-lightest);
    z-index: 5;
    padding-bottom: calc(var(--spacing-4xl) + 15vw);
  }

  .contact-card-wrapper {
    display: flex;
    flex-direction: column;
    max-width: 700px;
  }
  .site-container {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: var(--spacing-md);
    padding-right: var(--spacing-md);
  }
  .padding-section {
    padding-top: var(--spacing-3xl);
    padding-bottom: var(--spacing-3xl);
  }
  .section-header-wrapper {
    text-align: start;
    word-wrap: break-word;
  }

  .heading-h2 {
    color: var(--color-brand-medium-green);
    margin-bottom: var(--spacing-md);
    font-size: 2.5rem;
  }

  .text-description {
    font-size: var(--font-size-body-base);
    color: var(--color-neutral-dark);
  }

  .contact-form-container {
    padding-top: var(--spacing-3xl);
    color: var(--color-neutral-font-dark);
  }

  .form-field-group {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--spacing-lg);
    width: 100%;
  }

  .form-grid-2-col {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  @media (min-width: 780px) {
    .form-grid-2-col {
      grid-template-columns: 1fr 1fr;
    }
  }

  label {
    font-weight: var(--font-weight-bold);
    margin-bottom: 0.5rem;
    display: block;
    color: var(--color-neutral-font-dark);
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-neutral-medium-grey);
    border-radius: var(--border-radius);
    font-size: var(--font-size-body);
    transition: border-color 0.3s ease;
    font-family: var(--font-primary);
  }

  .form-input:focus,
  .form-textarea:focus {
    border-color: var(--color-neutral-font-dark);
    outline: none;
  }

  .form-textarea {
    min-height: 150px;
    resize: vertical;
  }

  .form-checkbox-label {
    display: flex;
    align-items: flex-start;
    cursor: pointer;
    font-size: var(--font-size-body-small);
    color: var(--color-neutral-dark);
    margin-bottom: var(--spacing-md);
  }

  .form-checkbox-label input[type="checkbox"] {
    opacity: 0;
    width: 0;
    height: 0;
    position: absolute;
  }

  .checkbox-custom-indicator {
    width: 18px;
    height: 18px;
    border: 2px solid var(--color-brand-medium-green);
    border-radius: 4px;
    margin-right: var(--spacing-sm);
    flex-shrink: 0;
    position: relative;
    top: 2px;
    transition:
      background-color 0.2s ease,
      border-color 0.2s ease;
  }

  .checkbox-custom-indicator::after {
    content: "";
    position: absolute;
    top: 2px;
    left: 5px;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
    display: none;
  }

  .form-checkbox-label
    input[type="checkbox"]:checked
    + .checkbox-custom-indicator {
    background-color: var(--color-brand-medium-green);
    border-color: var(--color-brand-medium-green);
  }

  .form-checkbox-label
    input[type="checkbox"]:checked
    + .checkbox-custom-indicator::after {
    display: block;
  }

  .checkbox-text {
    line-height: 1.4;
  }

  .padding-bottom {
    padding-bottom: 1rem;
  }
  .padding-small {
    padding-bottom: 0.5rem;
  }
  .padding-medium {
    padding-bottom: 1rem;
  }

  .form-success-message,
  .form-error-message {
    padding: var(--spacing-md);
    margin-top: var(--spacing-lg);
    border-radius: var(--border-radius);
    font-weight: var(--font-weight-bold);
    text-align: center;
    display: none;
  }

  .button-orange {
    width: 100%;
  }
  .form-success-message {
    background-color: var(--color-system-success);
    color: var(--color-system-success-font);
  }

  .form-error-message {
    background-color: var(--color-system-error);
    color: var(--color-system-error-font);
  }
</style>

<script>
  // Zuordnung der Feldnamen zu deutschen Fehlermeldungen
  const ERROR_MESSAGES = {
    "first-name": "Vorname ist erforderlich.",
    "last-name": "Nachname ist erforderlich.",
    email: "E-Mail-Adresse ist erforderlich.",
    phone: "Telefonnummer ist erforderlich.",
    message: "Eine Nachricht ist erforderlich.",
    TandCs: "Sie müssen den AGBs und Datenschutzbestimmungen zustimmen.",
  };

  const form = document.getElementById("contact-form");
  const successMessage = document.getElementById("form-success");
  const errorMessage = document.getElementById("form-error");
  const formErrorDiv = errorMessage.querySelector("div");

  // Funktion zum Zurücksetzen aller Fehler
  function clearErrors() {
    // 1. Nachrichten (Success/Error) ausblenden
    successMessage.style.display = "none";
    errorMessage.style.display = "none";

    // 2. Alle Feld-Fehlermeldungen zurücksetzen
    document.querySelectorAll(".input-error-message").forEach((el) => {
      el.textContent = "";
      el.style.display = "none";
    });

    // 3. Fehler-Klassen von Inputs entfernen
    document.querySelectorAll(".form-input, .form-textarea").forEach((el) => {
      el.classList.remove("error");
    });
  }

  // Funktion zur Anzeige der Erfolgs-/Fehlermeldungen (für Server-Antwort)
  function showMessage(element, isSuccess, errorDetail = null) {
    clearErrors(); // Zuerst alle Fehlermeldungen vom Formular löschen

    // Server-Nachricht anzeigen
    if (element) {
      element.style.display = "block";
      if (element === errorMessage && errorDetail) {
        formErrorDiv.innerHTML = `
          Beim Absenden des Formulars ist ein Fehler aufgetreten. Bitte
          versuchen Sie es erneut.
          <br><br>
          <strong>Fehler-Details:</strong> ${errorDetail}
        `;
      } else if (element === errorMessage) {
        formErrorDiv.textContent = `Beim Absenden des Formulars ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.`;
      }
      // Formular bei Erfolg ausblenden
      if (isSuccess) {
        form.style.display = "none";
      }
    }
  }

  // NEUE Funktion zur Client-Side-Validierung
  function validateForm() {
    clearErrors(); // Vor jeder Validierung zurücksetzen
    let isValid = true;
    let firstInvalidField = null;

    // Alle required Felder (Input, Textarea, Checkbox) holen
    const requiredFields = form.querySelectorAll("[required]");

    requiredFields.forEach((field) => {
      const fieldName = field.name;
      // Hier wird die korrekte, eindeutige ID verwendet: error-Feldname
      const errorElement = document.getElementById(`error-${fieldName}`);

      // Fehlerprüfung
      let hasError = false;

      if (field.type === "checkbox") {
        if (!field.checked) {
          hasError = true;
        }
      } else if (field.value.trim() === "") {
        hasError = true;
      }

      // Fehler anzeigen, falls vorhanden
      if (hasError) {
        isValid = false;

        if (errorElement) {
          errorElement.textContent = ERROR_MESSAGES[fieldName];
          errorElement.style.display = "block";
        }

        // 'error' Klasse zum Input-Feld hinzufügen
        if (field.type !== "checkbox") {
          field.classList.add("error");
        }

        // Das erste ungültige Feld speichern, um dorthin zu scrollen/fokussieren
        if (!firstInvalidField) {
          firstInvalidField = field;
        }
      } else {
        // Bei gültigen Feldern 'error' Klasse entfernen und Fehlermeldung ausblenden (wichtig!)
        if (field.type !== "checkbox") {
          field.classList.remove("error");
        }
        if (errorElement) {
          errorElement.style.display = "none";
        }
      }
    });

    // Wenn ungültig, zum ersten Fehlerfeld scrollen und Fokus setzen
    if (!isValid && firstInvalidField) {
      firstInvalidField.focus();
      firstInvalidField.scrollIntoView({ behavior: "smooth", block: "center" });
    }

    return isValid;
  }

  // Funktion, um Fehler bei der Eingabe sofort zu entfernen
  function handleInput(event) {
    const field = event.target;
    // Prüfen, ob das Feld ausgefüllt ist
    if (field.value.trim() !== "") {
      field.classList.remove("error");
      const errorElement = document.getElementById(`error-${field.name}`);
      if (errorElement) {
        errorElement.style.display = "none";
      }
    } else if (field.hasAttribute("required")) {
      // Bei Leere die Validierung (inkl. Fehler anzeigen) erneut laufen lassen
      validateForm();
    }
    // Spezielles Handling für Checkbox, da 'input' event nicht ideal ist
    if (field.type === "checkbox") {
      validateForm();
    }
  }

  // Listener für sofortige Validierung/Feedback beim Tippen/Klicken
  form.querySelectorAll("[required]").forEach((field) => {
    field.addEventListener("input", handleInput);
  });

  // Spezialfall für die Checkbox: Ändern des Zustands sofort validieren
  document.getElementById("TandCs")?.addEventListener("change", handleInput);

  // Handle form submission using AJAX (Fetch API)
  form.addEventListener("submit", async function (event) {
    event.preventDefault(); // Standard-Formularübermittlung verhindern

    // *** SCHRITT 1: Client-Side Validierung ausführen ***
    if (!validateForm()) {
      console.log("Client-Side Validierung fehlgeschlagen.");
      return; // Formular nicht senden
    }

    // Wenn die Validierung erfolgreich war, mit dem Senden beginnen
    const button = form.querySelector("button[type='submit']");
    const originalButtonText = button.textContent;
    button.textContent = "Sende...";
    button.disabled = true;

    const data = new FormData(event.target);
    const formUrl = event.target.action;

    // Konvertiere FormData zu URLSearchParams
    const urlEncodedData = new URLSearchParams(data);

    try {
      const response = await fetch(formUrl, {
        method: "POST",
        body: urlEncodedData.toString(),
        headers: {
          "Content-Type": "application/x-www-form-urlencoded",
        },
      });

      if (response.ok) {
        showMessage(successMessage, true);
        form.reset(); // Formularfelder leeren
        clearErrors(); // Auch die Erfolgsmeldung löscht alle Fehler
      } else {
        // Fehler-Handling von Server-Antwort
        let errorDetail = `Status ${response.status}`;
        const contentType = response.headers.get("content-type");

        if (response.status === 404) {
          errorDetail = `404: API-Endpunkt unter ${formUrl} nicht gefunden.`;
        } else if (contentType && contentType.includes("application/json")) {
          const errorBody = await response.json();
          errorDetail =
            errorBody.error || `Serverfehler (Status: ${response.status})`;
        } else {
          errorDetail = `Unbekannte Antwort (HTML/Text). Status: ${response.status}`;
        }

        console.error(
          "Formularübermittlung fehlgeschlagen:",
          response.status,
          errorDetail
        );
        showMessage(errorMessage, false, errorDetail);
      }
    } catch (error) {
      console.error("Netzwerkfehler beim Absenden des Formulars:", error);
      showMessage(errorMessage, false, `Netzwerkfehler: ${error.message}`);
    } finally {
      // Button-Status zurücksetzen (außer bei Erfolg, da das Formular dann ausgeblendet wird)
      if (successMessage.style.display !== "block") {
        button.textContent = originalButtonText;
        button.disabled = false;
      }
    }
  });
</script>
